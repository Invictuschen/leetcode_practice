class Solution {
    public boolean searchMatrix(int[][] matrix, int target) {
        if (matrix.length == 0 || matrix == null || matrix[0].length == 0) {
            return false;
        }
        int i = 0, len = matrix.length - 1, j = matrix[0].length - 1;
        while (i <= len  && j >= 0) {
            if (matrix[i][j] > target) {
                j--;
            } else if (matrix[i][j] < target) {
                i++;
            } else {
                return true;
            }
        }
        return false;
    }
}
